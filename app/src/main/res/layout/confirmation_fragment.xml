<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:pixlui="http://schemas.android.com/apk/com.neopixl.pixlui"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/booking_background"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/confirmImg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:src="@drawable/confirmation" />

    <com.neopixl.pixlui.components.textview.TextView
        android:id="@+id/dummyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/confirmImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Your reservation is successful \n and will be confirmed shortly!"
        android:textColor="@color/style_color_primary_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        pixlui:typeface="Titillium-Bold.otf" />

    <com.neopixl.pixlui.components.textview.TextView
        android:id="@+id/dummyText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dummyText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Enjoy your night!"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        pixlui:typeface="Titillium-Bold.otf" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_above="@+id/txtMakeBooking"
        android:layout_below="@+id/dummyText2"
        android:layout_centerHorizontal="true"
        android:scaleType="center"
        android:src="@drawable/confirmation_logo" />

    <com.neopixl.pixlui.components.textview.TextView
        android:id="@+id/txtMakeBooking"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/style_color_primary_dark"
        android:gravity="center"
        android:text="MAKE ANOTHER BOOKING"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        pixlui:typeface="Titillium-Bold.otf" />
</RelativeLayout>